<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndicatorSeekBar">
        <attr name="isb_max" format="float" /> <!-- the max value of SeekBar to seek, default 100-->
        <attr name="isb_min" format="float" /> <!-- the min value of SeekBar to seek, default 0-->
        <attr name="isb_progress" format="float" /> <!-- the current progress value of SeekBar, default 0-->
        <attr name="isb_progress_value_float" format="boolean" /> <!--set the value of SeekBar to float type, default false-->
        <attr name="isb_seek_smoothly" format="boolean" /> <!--true to seek smoothly when SeekBar have ticks, default false-->
        <attr name="isb_r2l" format="boolean" /> <!--enable right-to-left support, default false-->
        <attr name="isb_tick_count" format="integer" /> <!--SeekBar ticks number, default 0-->
        <attr name="isb_user_seekable" format="boolean" /> <!--prevent user from seeking, default false-->
        <attr name="isb_clear_default_padding" format="boolean" /> <!-- set SeekBar leftPadding & rightPadding to 0, default false, default padding 16dp-->
        <attr name="isb_only_thumb_draggable" format="boolean" /> <!--user change the thumb location by touching thumb/track, true for touching track to seek and false for touching thumb to seek, default false-->

        <attr name="isb_show_indicator"> <!-- the type of indicator, default rounded_rectangle-->
            <enum name="none" value="0" />
            <enum name="circular_bubble" value="1" />
            <enum name="rounded_rectangle" value="2" />
            <enum name="rectangle" value="3" />
            <enum name="custom" value="4" /> <!--custom indicator layout-->
        </attr>

        <attr name="isb_indicator_color" format="color|reference" /> <!-- indicator color, default #FF4081-->
        <attr name="isb_indicator_text_color" format="color|reference" /> <!-- indicator text color, default #FF4081 -->
        <attr name="isb_indicator_text_size" format="dimension|reference" /> <!-- indicator text size, default 14sp-->
        <attr name="isb_indicator_content_layout" format="reference" /> <!-- custom indicator layout-->
        <attr name="isb_indicator_top_content_layout" format="reference" /> <!--set the indicator top view, has effect on indicator type: rectangle or rounded_rectangle-->

        <attr name="isb_track_background_size" format="dimension|reference" /> <!-- set IndicatorSeekBar track background bar size, default 2dp-->
        <attr name="isb_track_background_color" format="color|reference" /> <!-- set IndicatorSeekBar track background bar color, default #D7D7D7-->
        <attr name="isb_track_progress_size" format="dimension|reference" /> <!-- set IndicatorSeekBar track progress bar size, default 2dp-->
        <attr name="isb_track_progress_color" format="color|reference" /> <!-- set IndicatorSeekBar track progress bar color, default #FF4081-->
        <attr name="isb_track_rounded_corners" format="boolean" /> <!-- set the track shape to round-->

        <attr name="isb_thumb_text_color" format="color|reference" /> <!--set thumb color, default #FF4081-->
        <attr name="isb_show_thumb_text" format="boolean" /> <!--show thumb text, default false-->

        <attr name="isb_thumb_size" format="dimension|reference" /> <!--set thumb size, default 14dp, thumb size will be limited in 30dp-->
        <attr name="isb_thumb_color" format="color|reference" /> <!--set thumb color, default #FF4081-->
        <attr name="isb_thumb_drawable" format="reference" /> <!--set custom thumb drawable-->
        <attr name="isb_thumb_adjust_auto" format="boolean" /> <!--set the thumb to automatically move to the closed tick after touch up, default true-->

        <attr name="isb_tick_mark_color" format="color|reference" /> <!--set tick color, default #FF4081-->
        <attr name="isb_tick_mark_size" format="dimension|reference" /> <!--set the tick width, default 10dp-->
        <attr name="isb_tick_mark_drawable" format="reference" /> <!--set custom tick drawable-->
        <attr name="isb_tick_mark_ends_hide" format="boolean" /> <!--hide two ticks on the SeekBar both ends, default false-->
        <attr name="isb_tick_mark_swept_hide" format="boolean" /> <!--hide the ticks on the SeekBar thumb left, default false-->

        <attr name="isb_show_tick_mark_type"> <!--the tick shape type, default is NONE-->
            <enum name="none" value="0" />
            <enum name="oval" value="1" />
            <enum name="square" value="2" />
            <enum name="divider" value="3" /> <!--show tick mark shape as vertical line, line size is 1dp-->
        </attr>

        <attr name="isb_show_tick_text" format="boolean" /> <!--show the text below tick, default false-->
        <attr name="isb_tick_text_color" format="reference|color" /> <!--set text color, default #FF4081-->
        <attr name="isb_tick_text_size" format="dimension|reference" /> <!--set the tick text size, default 13sp-->
        <attr name="isb_tick_text_array" format="reference" /> <!--set custom tick text to replace the default progress text, default null-->

        <attr name="isb_tick_text_typeface"> <!--the typeface for tick/thumb text, default NORMAL-->
            <enum name="normal" value="0" />
            <enum name="monospace" value="1" />
            <enum name="sans" value="2" />
            <enum name="serif" value="3" />
        </attr>
    </declare-styleable>
</resources>